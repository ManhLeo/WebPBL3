@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Assets/Page.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>
<body>
    <div class="Form" id="Form">
        <div class="Form_container">
            <div class="Form_item" style="justify-content: center;">
                <p style="font-weight: 600;font-size: 24px;color: black;">ĐẶT PHÒNG</p>
            </div>
            <div class="Form_item">
                <p>Họ và tên:</p>
                <input type="text" class="input">
            </div>
            <div class="Form_item">
                <p>Email:</p>
                <input type="text" class="input">
            </div>
            <div class="Form_item" class="input">
                <p>SĐT:</p>
                <input type="text" class="input">
            </div>
            <div class="Form_item" class="input">
                <p>Loại phòng:</p>
                <input list="roomTypes" id="roomType" name="roomType" class="input">
                <datalist id="roomTypes">
                    <option value="Thường">
                    <option value="Vip1">
                    <option value="Vip2">
                </datalist>
            </div>
            <div class="Form_item" class="input">
                <p>Số lượng:</p>
                <input type="text" class="input">
            </div>
            <div class="Form_item">
                <p>Ngày nhận phòng:</p>
                <input type="date" class="input">
            </div>
            <div class="Form_item">
                <p>Ngày trả phòng:</p>
                <input type="date" class="input">
            </div>
            <div class="Form_item" style="justify-content: center;margin-top: 20px;">
                <button class="button1">ĐẶT PHÒNG</button>
                <button class="button1" onclick="CloseForm()">Thoát</button>
            </div>
        </div>
    </div>
    <div class="Taskbar">
        <div class="Taskbar_container">
            <img src="~/Assets/Logo.png" alt="" width="100px">
            <div class="Taskbar_content">
                <div id="item1">
                    <div class="Taskbar_item">
                        TRANG CHỦ
                    </div>
                    <div class="Taskbar_item">
                        GIỚI THIỆU
                    </div>
                    <div class="Taskbar_item">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </div>
                    <div class="Taskbar_item">
                        <button class="button1" onclick="MyForm()">ĐẶT NGAY</button>
                    </div>
                </div>
                <div id="item2">
                    <button class="button2" onclick="window.location.href='@Url.Action("Login", "Accounts")'">ĐĂNG NHẬP</button>
                    <button class="button2" onclick="window.location.href='@Url.Action("Register", "Accounts")'">ĐĂNG kÝ</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="img"></div>
        <div class="content">
            <div class="content_item1">
                <p style="font-weight: 600;font-size: 16px;">Loại phòng:</p>
                <div>
                    <input type="radio" name="type">
                    Thường
                </div>
                <div>
                    <input type="radio" name="type">
                    VIP1
                </div>
                <div>
                    <input type="radio" name="type">
                    VIP2
                </div>
                <div>
                    <input type="radio" name="type1">
                    Phòng đơn
                </div>
                <div>
                    <input type="radio" name="type1">
                    Phòng đôi
                </div>
            </div>
            <div class="content_item2">
                <div class="room">
                    <div class="room_img">
                        <img src="~/Assets/Room1_1.png" alt="">
                        <img src="~/Assets/Room1_2.png" alt="">
                        <img src="~/Assets/Room1_3.png" alt="">
                    </div>
                    <div class="room_content">
                        <p style="font-weight: 600;font-size: 20px;">THÔNG TIN PHÒNG:</p>
                        <p>Loại phòng: Thường</p>
                        <p>
                            Giá phòng
                            <ul style="padding-left: 50px;">
                                <li>
                                    Phòng đơn: 200k/ngày
                                </li>
                                <li>
                                    Phòng đôi: 300k/ngày
                                </li>
                            </ul>
                        </p>
                        <p>Tiện ích: Máy lạnh, tivi, tủ lạnh,...</p>
                        <button class="button1" onclick="MyForm()">ĐẶT NGAY</button>
                    </div>
                </div>
                <div class="room">
                    <div class="room_img">
                        <img src="~/Assets/Room2_1.png" alt="">
                        <img src="~/Assets/Room1_2.png" alt="">
                        <img src="~/Assets/Room1_3.png" alt="">
                    </div>
                    <div class="room_content">
                        <p style="font-weight: 600;font-size: 20px;">THÔNG TIN PHÒNG:</p>
                        <p>Loại phòng: Vip1</p>
                        <p>
                            Giá phòng
                            <ul style="padding-left: 50px;">
                                <li>
                                    Phòng đơn: 500k/ngày
                                </li>
                                <li>
                                    Phòng đôi: 800k/ngày
                                </li>
                            </ul>
                        </p>
                        <p>Tiện ích: Máy lạnh, tivi, tủ lạnh, spa, phòng Gym, hồ bơi...</p>
                        <button class="button1" onclick="MyForm()">ĐẶT NGAY</button>
                    </div>
                </div>
                <div class="room">
                    <div class="room_img">
                        <img src="~/Assets/Room3_1.png" alt="">
                        <img src="~/Assets/Room1_2.png" alt="">
                        <img src="~/Assets/Room1_3.png" alt="">
                    </div>
                    <div class="room_content">
                        <p style="font-weight: 600;font-size: 20px;">THÔNG TIN PHÒNG:</p>
                        <p>Loại phòng: Vip2</p>
                        <p>
                            Giá phòng
                            <ul style="padding-left: 50px;">
                                <li>
                                    Phòng đơn: 1000k/ngày
                                </li>
                                <li>
                                    Phòng đôi: 1500k/ngày
                                </li>
                            </ul>
                        </p>
                        <p>Tiện ích: Máy lạnh, tivi, tủ lạnh, spa, phòng Gym, hồ bơi, buffet, dịch vụ đưa đón tận nơi...</p>
                        <button class="button1" onclick="MyForm()">ĐẶT NGAY</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Assets/Page.js"></script>
</body>
</html>

