

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Assets/Login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="container_item">
            <div class="logo">
                <img src="~/Assets/Logo_white.png" alt="" width="100px">
                HMV Hotel
            </div>
            <div class="login">
                <div class="login_title">
                    <div onclick="myLogin()">
                        Đăng nhập
                        <div class="line" id="LineLogin"></div>
                    </div>
                    <div onclick="mySignUp()">
                        Đăng ký
                        <div class="line" id="LineSignUp"></div>
                    </div>
                </div>
                <div class="login_content" id="Login">
                    @using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="content">
                            <div class="title">Email</div>
                            <input type="email" name="email" class="input" required>
                            <div class="title">Mật khẩu</div>
                            <input type="password" name="password" class="input" required>
                        </div>
                        <div class="loi">
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <span>@ViewBag.ErrorMessage</span>
                            }
                        </div>
                        <div class="button">
                            <button type="submit">Đăng nhập</button>
                            <div>
                                <input type="checkbox" id="rememberMe" name="rememberMe">
                                Ghi nhớ mật khẩu
                            </div>
                        </div>
                    }
                </div>
                <div class="login_content" id="SignUp">
                    <div class="content">
                        <div class="title">Họ và tên</div>
                        <input type="text" class="input">
                        <div class="title">CCCD</div>
                        <input type="text" class="input">
                        <div class="title">Số điện thoại</div>
                        <input type="text" class="input">
                        <div class="title">Email</div>
                        <input type="text" class="input">
                        <div class="title">Mật khẩu</div>
                        <input type="text" class="input">
                        <div class="title">Nhập lại mật khẩu</div>
                        <input type="text" class="input">
                    </div>
                    <div class="loi">Thiếu thông tin!!</div>
                    <div class="button">
                        <button>Đăng ký</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Assets/Login.js"></script>
</body>
</html>
